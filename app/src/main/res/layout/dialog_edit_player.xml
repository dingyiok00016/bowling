<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.cloudysea.views.WithLeftAndRightShapeTextView
        android:text="@string/edit_players"
        android:id="@+id/tv_title_edit_player"
        android:layout_marginTop="22.5dp"
        android:layout_width="wrap_content"
        android:textSize="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/layout_player_edit_item_for_small_screen"
        android:layout_marginRight="17.25dp"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17.25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        />

    <TextView
        android:id="@+id/tv_complete_action"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="28.5dp"
        android:text="@string/complete"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textSize="23dp"
        android:background="@drawable/btn_common"
        android:layout_height="wrap_content" />



</LinearLayout>
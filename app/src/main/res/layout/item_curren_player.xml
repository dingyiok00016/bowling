<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="96.75dp"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_marginTop="17.25dp"
        android:layout_width="79.5dp"
        android:scaleType="fitXY"
        android:layout_height="79.5dp" />

    <ImageView
        android:id="@+id/iv_current_player_vip_icon"
        android:src="@drawable/icon_vip_head_normal"
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_delete_or_add_icon"
        android:src="@drawable/icon_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp" />


    <TextView
        android:id="@+id/tv_player_name"
        android:layout_below="@id/iv_avatar"
        android:layout_marginTop="4.5dp"
        android:textSize="19.5dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="79.5dp"
        android:layout_height="wrap_content" />



</RelativeLayout>
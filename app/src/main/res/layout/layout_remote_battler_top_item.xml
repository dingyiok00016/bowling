<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_remote_top_item"
    android:layout_width="wrap_content"
    android:layout_height="37dp">

    <TextView
        android:id="@+id/tv_top_item_title"
        android:layout_width="wrap_content"
        tools:text="设备 | "
        android:textSize="@dimen/dimens_20"
        android:text="|"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:fontFamily="@font/ball_use_style_one"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_top_item_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/dimens_20"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ball_use_style_one"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/tv_top_item_title"
        android:layout_toRightOf="@id/tv_top_item_title"
        android:layout_width="wrap_content"
        android:scrollbars="vertical"
        android:layout_height="wrap_content" />



    <ImageView
        android:src="@drawable/btn_pulldown"
        android:id="@+id/iv_top_item_select"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_height="wrap_content" />



</RelativeLayout>